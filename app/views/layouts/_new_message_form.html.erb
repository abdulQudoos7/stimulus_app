<div class="form-group msg-form">
  <%= form_with(model: [@single_room, @message], remote: true, class: "d-flex", data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |f| %>
    <%= f.text_field :content, id: "chat-text", class: "form-control msg-content", placeholder: "Type your message...", autocomplete: "off" %>
    <%= f.submit "Send", data: { disable_with: "Sending..." }, class: "btn btn-primary" %>
  <% end %>
</div>
