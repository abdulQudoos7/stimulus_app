<% content_for :title, "Posts" %>

<h1>Posts</h1>

<div id="posts">
<h1>#############</h1>
  <div data-controller="hello"></div>
  <h1>#############</h1>

  <% @posts.each do |post| %>
    <div data-controller="visibility" data-visibility-visible-value="<%= post.visible %>" id="post_<%= post.id %>_container" >
        <%= render post %>
        <p>
          <%= link_to "Show this post", post %>
        </p>
    </div>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
